<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_al_ll">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">


            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv_al_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/dog" />

            <TextView
                android:id="@+id/cv_al_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cv_al_img"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:text="e parent ot g by that"
                android:textColor="#3366ff"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/cv_al_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cv_al_img"
                android:layout_below="@id/cv_al_name"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:text="Not A Cat"
                android:textColor="#3366ff"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/cv_al_asnwer"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cv_al_img"
                android:layout_below="@id/cv_al_question"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Not A Cat"
                android:textColor="#3366ff"
                android:textSize="14dp" />

            <Button
                android:id="@+id/cv_ali_del_animal"
                android:layout_below="@id/cv_al_asnwer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="#3366ff"
                android:text="Delete"
                android:textColor="#fff"
                />






        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>